        <% if(session.user) { %>
            <div class="topnav">
                <a href="/"><img class="logo" src="logo.png"></a>
                <h1 class="user-desr">
                        어서오세요. <%= session.user.name %> 님
                </h1>
                <% if(messages.error) { %>
                    <script>
                        alert('<%= messages.error %> ');
                    </script>
                <% } %>
                <div class="form-wrapper">
                    <form class="form-write" name="write_form_member" method="get" action="/write">
                        <input class="button-tag" type="submit" name="submit-button" value="글쓰기">
                    </form>
                    <button class="form-write button-tag" onclick="logout()">로그아웃</button>
                </div>
            </div>
        <% } %>
